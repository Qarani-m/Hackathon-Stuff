<configuration>

    <!-- Appender for app_logs -->
    <appender name="APP_LOGS" class="ch.qos.logback.core.FileAppender">
        <file>app_logs.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender for SCHEDULER_LOG -->
    <appender name="SCHEDULER_LOG" class="ch.qos.logback.core.FileAppender">
        <file>SCHEDULER_LOG.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger for FetchData class -->
    <logger name="com.example.demo.FetchData" level="info" additivity="false">
        <appender-ref ref="SCHEDULER_LOG"/>
    </logger>

    <!-- Logger for other classes -->
    <logger name="com.example.demo" level="info" additivity="false">
        <appender-ref ref="APP_LOGS"/>
    </logger>

    <!-- Root logger -->
    <root level="info">
        <appender-ref ref="APP_LOGS"/>
    </root>
</configuration>
